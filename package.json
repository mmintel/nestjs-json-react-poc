{
  "private": true,
  "name": "react-ssr-nestjs-starter",
  "scripts": {
    "dev": "tsnd --project tsconfig.server.json src/server/main.ts",
    "build": "rimraf dist && tsc -p tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@emotion/cache": "^10.0.29",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.0.6",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.6",
    "@nestjs/platform-express": "^7.0.6",
    "@react-ssr/core": "^0.22.0",
    "@react-ssr/nestjs-express": "^0.22.0",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^9.0.1",
    "@types/hapi__joi": "^17.1.2",
    "@types/turbolinks": "^5.2.0",
    "class-validator": "^0.12.2",
    "create-emotion-server": "^10.0.27",
    "fast-glob": "^3.2.4",
    "fs-extra": "^9.0.1",
    "memfs": "^3.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/jest": "25.1.4",
    "@types/node": "^13.7.7",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-plugin-emotion": "^10.0.33",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
